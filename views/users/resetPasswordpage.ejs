<%- include('../layouts/userHeader.ejs') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/themify-icons@0.1.2/css/themify-icons.css">
<style>
    body {
        background-color: #f2f2f2;
        font-family: 'Arial', sans-serif;
    }
    .form-container {
        background: #fff;
        padding: 40px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        margin-top: 50px;
    }
    .form-title {
        margin-bottom: 25px;
        font-size: 28px;
        color: #333;
        text-align: center;
        font-weight: bold;
    }
    .form-group {
        margin-bottom: 20px;
    }
    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #555;
        font-size: 16px;
    }
    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }
    .form-group input:focus {
        border-color: #007bff;
    }
    .form-group .zmdi {
        margin-right: 10px;
        vertical-align: middle;
    }
    .form-button {
        text-align: center;
    }
    .form-button input {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px 25px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }
    .form-button input:hover {
        background-color: #0056b3;
    }
    .error-message {
        color: rgb(214, 3, 3);
        margin-bottom: 20px;
        text-align: center;
        font-size: 14px;
    }
</style>
<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10 form-container">
                <h2 class="form-title">Change Password</h2>
                <form action="/updatePassword" method="post" enctype="application/x-www-form-urlencoded" class="register-form" id="register-form">
                    <div class="form-group">
                        <input type="hidden" id="email" name="email" value="<%=email %>">
                        <label for="password"><i class="zmdi zmdi-lock"></i> Your New Password</label>
                        <input type="password" name="password" id="password" placeholder="Enter your new password"/>
                    </div>
                    <div class="form-group">
                        <label for="Repassword"><i class="zmdi zmdi-lock"></i> Re-enter New Password</label>
                        <input type="password" name="confirmPassword" id="Repassword" placeholder="Re-enter your new password"/>
                    </div>
                    <% if (locals.message) { %>
                        <p class="error-message"><%= message %></p>
                    <% } %>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Reset Password"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="userAssets/vendor/jquery/jquery.min.js"></script>
<script src="userAssets/js/signupmain.js"></script>
<%- include("../layouts/userFooter.ejs") %>
