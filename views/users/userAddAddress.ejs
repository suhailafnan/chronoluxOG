<% if (message && messageType) { %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
      const message = "<%= message %>";
        const messageType = "<%= messageType %>";
        Swal.fire({
            title: messageType === "success" ? "Success" : "Error",
            text: message,
            icon: messageType
        });
    </script>
  <% } %>
  
  <hr class="mt-0 mb-4">
  <div class="row">   

          <div class="card mb-4">
              <div class="col-xl-12">
                  <div class="card mb-12">
                      <div class="card-body">
                          <h4 class="card-title">Add Address</h4>
                          <form action="/addAddress" method="post">
                              <div class="row">
                                  <div class="col-lg-6">
                                      <div class="checkout__input">
                                          <p>First Name<span>*</span></p>
                                          <input type="text" placeholder="<% user.name%>" class="form-control" name="name" value="<%= user.name%>">
                                      </div>
                                  </div>
                                  <div class="col-lg-6">
                                      <div class="checkout__input">
                                          <p>Email<span>*</span></p>
                                          <input type="text" placeholder="<%= user.email%>" class="form-control" name="email" value="<%= user.email%>" >
                                      </div>
                                  </div>
                                  <div class="col-lg-6">
                                      <div class="checkout__input">
                                          <p>Country<span>*</span></p>
                                          <input type="text" placeholder="Enter Country" class="form-control" name="country" required>
                                      </div>
                                  </div>
                                  <div class="col-lg-6">
                                      <div class="checkout__input">
                                          <p>State<span>*</span></p>
                                          <input type="text" placeholder="Enter State" class="form-control" name="state" required>
                                      </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>District<span>*</span></p>
                                        <input type="text" placeholder="Enter State" class="form-control" name="district" required>
                                    </div>
                                </div>
                                  <div class="col-lg-6">
                                      <div class="checkout__input">
                                          <p>Postcode / ZIP<span>*</span></p>
                                          <input type="text" placeholder="Enter Postcode / ZIP" class="form-control" name="pincode" required >
                                      </div>
                                  </div>
                                  <div class="col-lg-6">
                                      <div class="checkout__input">
                                          <p>Phone<span>*</span></p>
                                          <input type="text" placeholder="Enter Phone" class="form-control" name="mobile" required>
                                      </div>
                                  </div>
                                  <div class="col-lg-12">
                                      <div class="checkout__input">
                                          <p>Address<span>*</span></p>
                                          <input type="text" placeholder="Enter Street Address" class="form-control"  name="home_address" required>
                                          
                                      </div>
                                  </div>
                                  <div class="col-lg-12">
                                      <div class="checkout__input">
                                          <p>Town/City<span>*</span></p>
                                          <input type="text" placeholder="Enter Town/City" class="form-control" name="city" required>
                                      </div>
                                  </div>
                                  <div class="col-lg-12">
                                      <button type="submit" class="btn btn-primary">Add </button>
                                  </div>
                              </div>
                          </form>
                      </div>
                  </div>
              </div>

