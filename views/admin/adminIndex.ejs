          <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
          <script>
          document.addEventListener('DOMContentLoaded', function() {
  const sortbySelect = document.getElementById('sortby');

  const fetchAndRenderChart = (sortby) => {
    fetch('/admin/chartData', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ sortby })
    })
    .then(response => response.json())
    .then(data => {
      const ctx = document.getElementById('myChart').getContext('2d');

      if (window.chartInstance) {
        window.chartInstance.destroy();
      }

      // Calculate min, max, and dynamic colors for bars
      const salesData = data.datasets[0].data;
      const maxSale = Math.max(...salesData);
      const minSale = Math.min(...salesData);

      const barColors = salesData.map(sale => {
        if (sale === maxSale) {
          return 'rgba(0, 255, 0, 0.6)'; // Green for max
        } else if (sale === minSale) {
          return 'rgba(255, 0, 0, 0.6)'; // Red for min
        } else if (sale > minSale && sale < maxSale) {
          return 'rgba(255, 255, 0, 0.6)'; // Yellow for between min and max
        } else {
          return 'rgba(0, 0, 255, 0.6)'; // Blue for anything else
        }
      });

      data.datasets[0].backgroundColor = barColors;

      window.chartInstance = new Chart(ctx, {
        type: 'bar',
        data: data,
        options: {
          responsive: true,
          scales: {
            y: {
              beginAtZero: true
            }
          },
          plugins: {
            legend: {
              display: false
            },
            title: {
              display: true,
              text: 'Sales Statistics'
            }
          }
        }
      });
    })
    .catch((error) => {
      console.error(error);
    });
  };

  // Initial load with default 'weekly' option
  fetchAndRenderChart('weekly');

  // Change event listener
  sortbySelect.addEventListener('change', function() {
    const selectedOption = this.value;
    fetchAndRenderChart(selectedOption);
  });
});

          </script>
          
        
